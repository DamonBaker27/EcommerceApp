<section class = "section">
<%= debug session[:shopping_cart]%>
    <div class ="container">
      <div>
        <div class= "columns ">
          <div class ="column is-half">
            <%= image_tag @product.image%>
          </div>
          <div class = "column is-half ">
            <div class ="">
              <h1 class= "title is-4"><%= @product.Name%></h1>
              <h1 class = "title is-4">Price: $<%=@product.Price%></h1>
              <h1 class = "title is-4"><%=@product.Stock%> Left in stock!</h1>
              <div class = "mt-4">

              <%if session[:shopping_cart].include?(@product.id)%>
                <%= button_to cart_path(@product.id), method: :delete do %>
                  Remove from cart
                <%end%>
              <%else%>



                <%=form_with model: @order_item do |f|%>
                <%= f.hidden_field :product_id, value: @product.id%>
                <%= f.hidden_field :quantity, value: 1, min: 1%>
                <%= f.submit "Add To Cart" %>
                <%end%>

              <%end%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
    </div>
</section>
<section class = "section">
  <div class="content">
    <div class = "container">
      <%if @product.Description != "null"%>
      <h2>Item Description</h2>
      <p><%=@product.Description%></p>
      <%else%>
      <h2>No description avaliable.</h2>
      <%end%>
    </div>
  </div>
</section>