<h1 class = "title is-2">Your Shopping Cart Items</h1>
<table class ="table">
  <thead>
    <tr>
      <th>
        Product Name
      </th>
      <th>
        Price
      </th>
      <th>
        Order Quantity
      </th>
    </tr>
  </thead>
<% session[:shopping_cart].each do |i|%>
<% product = Product.find(i)%>
  <tbody>
        <tr>
      <th>
        <%= product.Name%>
      </th>
      <th>
        $<%= product.Price%>
      </th>
      <th>
        <%=product.Stock%>
      </th>
    </tr>
  </tbody>
<%end%>
</table>


<%= @sub_total%>

