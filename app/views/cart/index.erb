<h1 class = "title is-2">Your Shopping Cart Items</h1>
<%if cart.size != 0%>
<table class ="table">
  <thead>
    <tr>
      <th>
        Product Name
      </th>
      <th>
        Price
      </th>
      <th>
        Order Quantity
      </th>
    </tr>
  </thead>
  <% @cart.each do |i|%>
  <% product = Product.find(i.id)%>
    <tbody>
          <tr>
        <th>
          <%= link_to i.Name, i%>
        </th>
        <th>
          $<%= i.Price%>
        </th>
        <th>
          <input type="number" id="tentacles" name="tentacles"
            min="1" max="100" value = "1">
          <%= button_to remove_from_cart_path(i.id), method: :delete do %> Remove <%end%>
        </th>
      </tr>
    </tbody>
  <%end%>
  </table>

<h2 class= "title is-6">Gst: $<%= @gst_amount.round(2)%></h2>
<h2 class= "title is-6">Pst: $<%= @pst_amount.round(2)%></h2>
<h2 class= "title is-5">Subtotal: $<%= @sub_total.round(2)%></h2>
<h2 class= "title is-4">Total: $<%= @total.round(2)%></h2>

<%else%>
<h1 class ="title is-3">You have no items</h1>




<%end%>

  <div class = "title is-4"><%= link_to "continue shopping", root_path%></div>

  <div class="mt-4">
    <%= button_to "Place order", checkout_create_path, class: "button is-success" %>
  </div>