<section class = "section">
  <div class= "container">
    <div class = "columns  is-flex-direction-row is-flex-wrap-wrap is-align-content-stretch">
      <%@ram.each do |p|%>
        <div class = "column is-one-quarter ">
          <div class = "card">
            <div class ="card-image has-text-centered ">
              <figure class = "">
                <%= image_tag p.image%>
              </figure>
            </div>
            <div class= "card-content ">
              <p class= "pb-6"><%= p.Name%></p>
              <p class = "title is-3"></p><%= p.Price%></p>
            </div>
            <footer class="card-footer">
              <p class="card-footer-item">
                <span>
                  <button class="button is-success">Add to Cart</button>
                </span>
              </p>
            </footer>

          </div>
        </div>
      <%end%>
    </div>
  </div>
</section>